<header>
    <nav class="searchNav navbar navbar-expand-md navbar-light bg-white ps-4 pe-4">
        <a class="navbar-brand" href="#">
            <img src="../assets/images/chillAround_logo_01.png" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul id="searchNavBtn" class="navbar-nav d-flex align-items-center">
                <li class="nav-item d-flex p-2">
                    <span id="welcomeMessage" class="me-3"></span>
                </li>
                <li class="nav-item d-flex p-2">
                    <button id="loginBtn" class="btn">登入</button>
                </li>
                <li class="nav-item d-flex p-2">
                   <a href=""><i class="bi bi-plus-circle"></i></a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<script>
    // 假設用戶已登入的狀態
let isLoggedIn = false;

// 取得按鈕和歡迎訊息元素
const loginButton = document.getElementById('loginBtn');
const welcomeMessage = document.getElementById('welcomeMessage');

// 點擊按鈕的事件處理
loginButton.addEventListener('click', function() {
    if (isLoggedIn) {
        // 如果已登入，執行登出操作
        isLoggedIn = false;
        loginButton.innerText = '登入';
        welcomeMessage.innerText = '';
    } else {
        // 如果未登入，執行登入操作
        isLoggedIn = true;
        loginButton.innerText = '登出';
        welcomeMessage.innerText = 'Hi，使用者名稱';  // 可以加入用戶名的邏輯
    }
});
</script>

</script>